{
  "Comment": "SQSからのイベントでLambdaAを実行し、失敗時はLambdaBでDynamoDBに記録するサンプル",
  "StartAt": "MainLambda",
  "States": {
    "MainLambda": {
      "Type": "Task",
      "Resource": "${MainLambdaArn}",
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "MaxAttempts": 1
        }
      ],
      "Catch": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "ResultPath": "$.error",
          "Next": "FailureLambda"
        }
      ],
      "End": true
    },
    "FailureLambda": {
      "Type": "Task",
      "Resource": "${FailureLambdaArn}",
      "InputPath": "$",
      "End": true
    }
  }
}
